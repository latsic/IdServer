@model RegisterViewModel
<div class="login-page">
    <div class="page-header">
        <h1>Register</h1>
    </div>
    
    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@Model.Title</h3>
                </div>
                <div class="panel-body">

                    <form asp-route="Register">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input id="Username" class="form-control" placeholder="Username" asp-for="Username" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input id="Password" type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="PasswordRepeated">Repeat Password</label>
                                <input id="PasswordRepeated" type="password" class="form-control" placeholder="Repeat Password" asp-for="PasswordRepeated" autocomplete="off">
                            </div>
                            
                            <div class="form-group">
                                <button id="Register" class="btn btn-primary" name="button" value="register">Register</button>
                                <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <partial name="_ValidationSummary" />
</div>
<script src="~/js/register.js"></script>